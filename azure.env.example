# Azure Deployment Environment Variables
# Copy this file to .env and fill in your Azure-specific values

# Azure Container Registry
ACR_REGISTRY=yellowtip.azurecr.io

# Database (use Azure Database for PostgreSQL connection string)
DATABASE_URL=postgresql://username:password@your-server.postgres.database.azure.com:5432/yellowtip_reservations?sslmode=require

# Redis (use Azure Cache for Redis connection string)
REDIS_URL=rediss://:password@your-cache.redis.cache.windows.net:6380

# JWT Secret (generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Frontend API URLs
REACT_APP_API_URL=https://your-backend-app.azurewebsites.net/api
REACT_APP_WS_URL=wss://your-backend-app.azurewebsites.net

# PostgreSQL (if using container instead of Azure Database)
POSTGRES_DB=yellowtip_reservations
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# Redis Password (if using container instead of Azure Cache)
REDIS_PASSWORD=your_redis_password

